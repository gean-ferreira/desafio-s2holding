{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "printWidth": 140,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "singleAttributePerLine": false,
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 4,
        "bracketSameLine": true
      }
    },
    {
      "files": ["*.jsx"],
      "options": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "printWidth": 140,
        "jsxSingleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "singleAttributePerLine": true
      }
    },
    {
      "files": ["*.css", "*.json"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
